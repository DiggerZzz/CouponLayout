<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#cccccc"
    tools:context=".activity.MainActivity">

    <com.digger.coupon.android.widget.CouponLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:draw_gravity="top|bottom"
        app:saw_radius="4dp"
        app:saw_gap="2dp"
        app:coupon_background="#4CAF50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="￥ 100"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="13dp"
                android:textColor="#FFFFFF"
                android:text="满300元可用，有效期：2019.8.1-2019.8.31"/>

        </LinearLayout>

    </com.digger.coupon.android.widget.CouponLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.digger.coupon.android.widget.CouponLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:draw_gravity="left"
            app:saw_radius="4dp"
            app:saw_gap="2dp"
            app:coupon_background="@drawable/coupon_shape">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="￥ 100"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13dp"
                    android:textColor="#FFFFFF"
                    android:text="满300元可用"/>

            </LinearLayout>

        </com.digger.coupon.android.widget.CouponLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_weight="6.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coupon_type_shape"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="11dp"
                android:textColor="#FFFFFF"
                android:text="现金券"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:textColor="#333333"
                android:text="2019.8.1-2019.8.31"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="#888888"
                android:textSize="11dp"
                android:text="仅适用于部分商品"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>